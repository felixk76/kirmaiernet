{
  "name": "website",
  "version": "1.0.0",
  "description": "Repository for my personal page www.kirmaier.net",
  "main": ".eleventy.js",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/felixkirmaier/website.git"
  },
  "keywords": [],
  "author": "Felix Kirmaier",
  "license": "ISC",
  "homepage": "https://bitbucket.org/felixkirmaier/website#readme",
  "scripts": {
    "copyjs": "grunt copy:vendorJS",
    "build:dev": "npm run parcel:dev && npm run eleventy:dev",
    "build:prod": " npm run parcel:prod && npm run eleventy:prod && npm run workbox-inject && workbox copyLibraries dist/js/vendors/",
    "eleventy:dev": "eleventy --serve",
    "eleventy:prod": "eleventy",
    "eslint": "eslint .",
    "eslint-fix": "eslint . --fix",
    "eslint-nibble": "eslint-nibble .",
    
    "parcel:css": "NODE_ENV=development parcel build src/css/style.scss",
    "parcel:dev": "NODE_ENV=development parcel build src/sw.js src/css/style.scss  src/js/base.js --no-minify",
    "parcel:prod": "NODE_ENV=production parcel build src/sw.js  src/css/style.scss src/js/base.js --no-source-maps",
    "preinstall": "npx npm-force-resolutions",
    "postinstall": "npm run workbox-copy",
    "start": "npx eleventy --serve",
    "stylelint-find-rules": "stylelint-find-new-rules",
    "stylelint": "stylelint 'src/css/**/*.scss' --formatter verbose",
    "stylelint-fix": "stylelint 'src/css/**/*.scss'  --fix --formatter verbose",
    "stylelint-config": "stylelint 'src/css/style.scss' --print-config",
    "build": "npm run parcel:css && npm run build:dev",
    "deploy": "npm run parcel:css && npm run build:prod",
    "workbox-copy": "workbox copyLibraries src/js/vendors/ && workbox copyLibraries dist/js/vendors/",
    "workbox-inject": "workbox injectManifest workbox-config.js"
  },
  "devDependencies": {
    "@11ty/eleventy-navigation": "^0.1.6",
    "@11ty/eleventy-plugin-syntaxhighlight": "^3.0.6",
    "autoprefixer": "^9.x.x",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.2.2",
    "buffer-crc32": "^0.2.13",
    "eslint": "^7.19.0",
    "eslint-config-felixk76": "^1.0.15",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-standard": "^4.1.0",
    "iltorb": "^2.4.4",
    "load-grunt-config": "^3.0.1",
    "node-sass": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "nunjucks": "^3.2.2",
    "parcel-bundler": "^1.12.5",
    "postcss": "^8.2.6",
    "postcss-critical-split": "^1.0.4",
    "postcss-pxtorem": "^5.1.1",
    "stylelint": "^13.10.0",
    "stylelint-config-felixk76": "0.0.4",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0"
  },
  "dependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@navillus/eleventy-plugin-inline-css": "^1.0.3",
    "eleventy-plugin-svg-contents": "^0.7.0",
    "fg-loadcss": "^3.1.0",
    "instant.page": "^5.1.0",
    "intersection-observer": "^0.12.0",
    "lazysizes": "^5.3.0",
    "picturefill": "^3.0.3",
    "workbox-build": "^6.1.0",
    "workbox-cli": "^6.1.0"
  },
  "optionalDependencies": {
    "eslint-nibble": "^6.1.0",
    "husky": "^5.0.9",
    "lint-staged": "^10.5.4",
    "mrm": "^4.1.0",
    "stylelint-find-new-rules": "^3.0.1"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "browserslist": [
    "last 2 version",
    "not ie > 0",
    "not ie_mob > 0",
    "> 5%"
  ],
  "resolutions": {
    "lodash": "4.17.20"
  }
}
